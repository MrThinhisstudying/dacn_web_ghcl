@model GiaoHangTietKiem.Models.HoaDonVanChuyen

@{
    ViewBag.Title = "CreateBill";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="header-elements">THÊM THÔNG TIN KHÁCH HÀNG</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <strong>Ngày lập</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayLapHD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayLapHD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <strong>Tổng tiền</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <strong>Số phiếu giao hàng</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoPGH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoPGH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <strong>Mã nhân viên</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <strong>Trạng thái</strong>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TrangThai)
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <strong>Mã tuyến đường</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success btn-sm" /> |
                <a href="@Url.Action("IndexBill", "Admin")">
                    <i class="btn btn-info btn-sm">Trở lại</i>
                </a>
            </div>
        </div>
    </div>
}

<style>
    .header-elements {
        margin: 20px;
    }

    .form-horizontal {
        margin-left: 20px;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
