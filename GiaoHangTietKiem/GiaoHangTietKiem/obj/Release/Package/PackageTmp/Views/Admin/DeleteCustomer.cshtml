@model GiaoHangTietKiem.Models.KhachHang

@{
    ViewBag.Title = "DeleteCustomer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="header-elements">XOÁ KHÁCH HÀNG</h2>
<h3 class="header-elements">Bạn có chắc muốn xoá khác hàng này?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <strong>Họ tên</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKH)
        </dd>

        <dt>
            <strong>Số điện thoại</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            <strong>Địa chỉ</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            <strong>Giới tính</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="actionDesign">
            <input type="submit" value="Xoá" class="btn btn-success btn-sm" /> |
            <a href="@Url.Action("IndexCustomer", "Admin")">
                <i class="btn btn-info btn-sm">Trở lại</i>
            </a>
        </div>
    }
</div>

<style>
    .dl-horizontal {
        margin-left: 20px;
    }

    .header-elements {
        margin: 20px;
    }

    .actionDesign {
        margin-left: 20px;
    }
</style>

@*form-actions no-color*@
