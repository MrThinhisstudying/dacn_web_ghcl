@model IEnumerable<GiaoHangTietKiem.Models.Blog>

@{
    ViewBag.Title = "DetailsBlog";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DetailsBlog</h2>

<p>
    <a href="@Url.Action("CreateBlog", "Admin", new { id = Model.FirstOrDefault().MaLoaiBlog })">
        <i class="fa fa-edit btn btn-info btn-sm">Thêm Blog</i>
    </a> |
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenTK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateUpdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaLoaiBlog)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiBlog)
            </td>
            <td>
                <a href="@Url.Action("EditBlog", "Admin", new { id = item.MaBlog })">
                    <i class="fa fa-edit btn btn-info btn-sm">Chỉnh sửa</i>
                </a> |
                <a href="@Url.Action("DetailsBlog", "Admin", new { id = item.MaBlog})">
                    <i class="btn btn-warning btn-sm">Chi tiết</i>
                </a> |
                <a href="@Url.Action("DeleteBlog", "Admin", new { id = item.MaBlog })">
                    <i class="btn btn-danger btn-sm">Xoá</i>
                </a>
            </td>
        </tr>
    }

</table>
