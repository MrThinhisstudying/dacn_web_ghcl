@model IEnumerable<GiaoHangTietKiem.Models.PhieuYeuCau>

@{
    ViewBag.Title = "IndexRequestFrom";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>IndexRequestFrom</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NgayLap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KhoiLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaKN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaLVC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThanhToan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayLap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhoiLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaKN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaLVC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThanhToan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            <a href="@Url.Action("CreateBill", "Admin", new { id = item.SoPYC.Replace(" ", "") })">
                <i class="fa fa-edit btn btn-info btn-sm">Tạo Hóa Đơn</i>
            </a> |
            <a href="@Url.Action("DetailRequestFrom", "Admin", new { id = item.SoPYC.Replace(" ", "") })">
                <i class="btn btn-warning btn-sm">Chi tiết</i>
            </a> |
            <a href="@Url.Action("DeleteRequestFrom", "Admin", new { id = item.SoPYC.Replace(" ", "") })">
                <i class="btn btn-danger btn-sm">Xoá</i>
            </a>
        </td>
    </tr>
}

</table>
